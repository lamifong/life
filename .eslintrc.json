{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "globals": {
        "beforeEach": false,
        "describe": false,
        "it": false,
        "module": false,
        "require": false
    },
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", 100],
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
    }
}
